---

<header class="bg-white sticky top-0 z-40"> 
  <div class="container mx-auto px-4 flex items-center justify-between  py-4">
    <a href="#" class="flex items-center">
      <img src="/images/logo.png" alt="Logo Cyklo Vackar" class="h-16 w-auto" />
    </a>

    <nav class="flex items-center">
      {/* Desktop Navigation */}
      <ul class="hidden md:flex gap-6 text-heading-2">
        {navItems.map((item) => <Navitem {...item} />)}
      </ul>

      {/* Mobile Menu Button */}
      <button
        class="md:hidden text-gray-700 hover:text-primary focus:outline-none"
        onclick="toggleMobileMenu()"
      >
        <svg
          class="h-6 w-6"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>

      {/* Mobile Navigation */}
      <ul
        id="mobile-menu"
        class="hidden absolute top-full right-0 w-full md:w-auto bg-white p-4 space-y-2"
      >
        {
          navItems.map((item) => (
            <li class="text-center">
              <a
                href={item.href}
                class="duration-300 font-medium ease-linear hover:text-primary py-3 block"
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
  <div id="top-info-banner" class="bg-white pb-2 sm:pb-2">
    <div class="container rounded-lg bg-slate-100 mx-auto px-3 flex flex-col sm:flex-row sm:items-center justify-between">
      {/* Text Content - Now centered on all screen sizes */}
      <div class="flex-1 text-center">  {/* Removed sm:text-left */}
